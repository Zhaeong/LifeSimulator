<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_life_simulation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.owen.lifesimulator.LifeSimulation"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_toLeftOf="@+id/button_B"
        android:layout_toStartOf="@+id/button_B">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/MainMessage"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" />

        <Button
            android:text="eA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_A"
            android:onClick="ClickedButtonA"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:minWidth="20dip"
            android:layout_below="@+id/button_B" />

        <Button
            android:text="eB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_B"
            android:onClick="ClickedButtonB"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textAllCaps="false"
            android:minWidth="20dip"
            android:layout_below="@+id/MainMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>
